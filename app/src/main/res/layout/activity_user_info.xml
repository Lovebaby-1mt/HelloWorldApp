<?xml version="1.0" encoding="utf-8"?>
<!--
    个人中心布局文件
    结构：
    1. 头部：圆形头像 (CardView) 和 昵称/签名信息
    2. 中间菜单：静态 LinearLayout 列表 (使用 style 复用样式)
    3. 底部导航栏
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".UserInfoActivity">

    <!-- 头部背景区 -->
    <View
        android:id="@+id/view_header_bg"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 用户信息卡片 -->
    <!-- 修改 app:cardBackgroundColor 为带透明度的白色 (#E6FFFFFF = 90% 不透明) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F6EFEFEF"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- 圆形头像：利用 CardView 的圆角半径 (radius = size / 2) 实现 -->
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp">
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/user_picture"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tv_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这里是个性签名..."
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_marginTop="4dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 功能菜单列表 (包含在 ScrollView 中以适应小屏幕) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/view_header_bg"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- 菜单项：个人信息 -->
            <LinearLayout
                android:id="@+id/item_personal_info"
                style="@style/ProfileMenuItem">
                <ImageView style="@style/ProfileMenuIcon" android:src="@android:drawable/ic_menu_edit"/>
                <TextView style="@style/ProfileMenuText" android:text="个人信息"/>
                <ImageView style="@style/ProfileMenuArrow"/>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginHorizontal="24dp"/>

            <!-- 菜单项：我的收藏 -->
            <LinearLayout
                android:id="@+id/item_favorites"
                style="@style/ProfileMenuItem">
                <ImageView style="@style/ProfileMenuIcon" android:src="@android:drawable/btn_star"/>
                <TextView style="@style/ProfileMenuText" android:text="我的收藏"/>
                <ImageView style="@style/ProfileMenuArrow"/>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginHorizontal="24dp"/>

            <LinearLayout
                android:id="@+id/item_history"
                style="@style/ProfileMenuItem">
                <ImageView style="@style/ProfileMenuIcon" android:src="@android:drawable/ic_menu_recent_history"/>
                <TextView style="@style/ProfileMenuText" android:text="浏览历史"/>
                <ImageView style="@style/ProfileMenuArrow"/>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginHorizontal="24dp"/>

            <LinearLayout
                android:id="@+id/item_settings"
                style="@style/ProfileMenuItem">
                <ImageView style="@style/ProfileMenuIcon" android:src="@android:drawable/ic_menu_preferences"/>
                <TextView style="@style/ProfileMenuText" android:text="设置"/>
                <ImageView style="@style/ProfileMenuArrow"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 底部导航栏 -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_compass"
                app:tint="#999999"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="12sp"
                android:textColor="#999999"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_feed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_view"
                app:tint="#999999"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现"
                android:textSize="12sp"
                android:textColor="#999999"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="?attr/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="12sp"
                android:textColor="?attr/colorPrimary"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>