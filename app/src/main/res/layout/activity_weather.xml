<?xml version="1.0" encoding="utf-8"?>
<!--
    天气详情页布局
    结构：
    1. 顶部导航 (返回按钮)
    2. 当前天气详情 (城市、温度、天气状况、图标)
    3. 详细数据区域 (风力、温差)
    4. 底部内容面板 (未来预报列表、城市切换 Tab)
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_sunny"
    android:padding="16dp"
    tools:context=".WeatherActivity">

    <!-- 返回按钮 -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_menu_revert"
        app:tint="#F2F2F2"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <!-- 当前城市 -->
    <TextView
        android:id="@+id/tv_detail_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="城市"
        android:textColor="#F2F2F2"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"/>

    <!-- 当前温度 -->
    <TextView
        android:id="@+id/tv_detail_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="--°"
        android:textColor="#F2F2F2"
        android:textSize="64sp" />

    <!-- 天气图标与文字描述 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/iv_detail_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/w_sunnylight"
            app:tint="#F2F2F2"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_detail_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天气状况"
            android:textColor="#F2F2F2"
            android:textSize="18sp"/>
    </LinearLayout>

    <!-- 详细数据展示：风力和温差 -->
    <LinearLayout
        android:id="@+id/ll_extra_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tv_detail_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--风 --级"
            android:textColor="#CCF2F2F2"
            android:textSize="16sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="#80F2F2F2"
            android:layout_marginHorizontal="24dp"/>

        <TextView
            android:id="@+id/tv_detail_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--° / --°"
            android:textColor="#CCF2F2F2"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- 底部内容面板 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/bg_content_panel"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未来预报"
            android:textColor="#F2F2F2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- 未来天气预报列表 (RecyclerView) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_forecast"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_marginVertical="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换城市"
            android:textColor="#CCF2F2F2"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <!-- 城市切换横向滚动条 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_city_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>