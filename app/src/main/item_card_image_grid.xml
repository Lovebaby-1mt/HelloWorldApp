<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_margin="4dp" app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 瀑布流核心：adjustViewBounds=true, layout_height=wrap_content -->
        <ImageView android:id="@+id/iv_content_image" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:adjustViewBounds="true"
            android:scaleType="fitCenter" android:src="@android:drawable/ic_menu_gallery" />

        <TextView android:id="@+id/tv_content" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="8dp" android:text="标题内容"
            android:textColor="#333333" android:textSize="14sp" android:maxLines="2"
            android:ellipsize="end" />

        <!-- 底部简略信息 -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical"
            android:paddingStart="8dp" android:paddingEnd="8dp" android:paddingBottom="8dp">

            <TextView android:id="@+id/tv_author" android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_weight="1" android:text="作者"
                android:textColor="#666666" android:textSize="10sp" />

            <!-- 双列模式通常只显示点赞或不显示按钮，这里保留一个点赞图标示例 -->
            <LinearLayout android:id="@+id/ll_like" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:gravity="center">
                <ImageView android:layout_width="14dp" android:layout_height="14dp"
                    android:src="@android:drawable/btn_star" app:tint="#999999" />
            </LinearLayout>
        </LinearLayout>

        <!-- 隐藏的View占位，防止Processor报错 (如果Processor强行绑定了这些ID) -->
        <TextView android:id="@+id/tv_time" android:layout_width="0dp" android:layout_height="0dp"
            android:visibility="gone" />
        <View android:id="@+id/ll_comment" android:layout_width="0dp" android:layout_height="0dp"
            android:visibility="gone" />
        <View android:id="@+id/ll_share" android:layout_width="0dp" android:layout_height="0dp"
            android:visibility="gone" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
